extends layout

block content
  .container
    h4 Before we show you your hanger, please give us your email.
    .col-xs-3
    .col-xs-6
      form(role='form', id="emailForm")
        .form-group
          label(for="InputEmail") Email
          input#InputEmail.form-control(type='email', placeholder='Enter email')
          .row
            .col-xs-4
            .col-xs-4
              button.btn.btn-success#showHanger Show me my hanger
            .col-xs-4
    .col-xs-3
    h4#multi Hey! Want to know what items your friends thought?
    .row
      .col-xs-4
      .col-xs-4
        button#tweet.btn.btn-primary(href="http://clicktotweet.com/1KSU6") Share on Twitter
      .col-xs-4
    .row
      .col-xs-5
      .col-xs-2
        button#skip.btn Skip
      .col-xs-5


  script(src="/javascripts/email.js", type="text/javascript")