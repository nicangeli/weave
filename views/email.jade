extends layout

block content
  .container
    h4 Before we show you your hanger, please give us your email.
    .col-xs-3
    .col-xs-6
      form(role='form', id="emailForm")
        .form-group
          input#InputEmail.form-control(type='email', placeholder='Enter email')
          .row
          .col-xs-4
          .col-xs-4
            button.btn.btn-success#showHanger Show me my hanger
          .col-xs-4
    .col-xs-3
    h1#multi Hey! You've played a few times! Fancy sharing?
    button#tweet.btn(href="http://clicktotweet.com/1KSU6") Share on Twitter
    button#skip.btn Skip





  script(src="/javascripts/email.js", type="text/javascript")