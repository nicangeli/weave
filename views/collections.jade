extends layout

block content
  .container
    ul
    -for(var i = 0; i < data.length; i++) {
    -var element = data[i];
      .row.product
        .col-xs-3.collectionsImage
          img(src="#{element.imageUrl}")
        .col-xs-6.collectionsInfo
          h2.collections(data-collectionName="#{element.name}") #{element.name} 
            span.collectionsDescription - #{element.comment}
            br
            h4 A collection by Weave
            //- a(href="/collection/#{element.name}") #{element.name}
            //span.through 0/
            //span.size #{element.size}
            p Current progress: 
              span.through 1/
              span.size #{element.size}
            .progress.collectionsProgress
              .progress-bar.progress-bar-success(role="progressbar", aria-valuenow="6", aria-valuemin="0", aria-valuemax="20", style="width: 0")
        .col-xs-3.playButton
          a(href="/collection/#{element.name}")
            img(src="/images/playButton.png")
      .row
        .col-xs-2
        .col-xs-8
          hr
    -}     



  script(src="/javascripts/collections.js", type="text/javascript")