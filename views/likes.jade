extends layout

block content
	script(type='text/javascript')
		mixpanel.track("Collection Complete", {"likes": localStorage.getObj("likes"), "like count": localStorage.getObj("likes").length});
		mixpanel.track_links(".weaveAgain", "Play Again");

	.container
		.row
			.col-md-4.col-xs-1
			.col-md-4.col-xs-10
				-if(user == null) {
				a.btn.btn-custom.weaveAgain(href="/signup") Weave another Collection
				-} else {
				a.btn.btn-custom.weaveAgain(href="/collections") Weave another Collection
				-}
				a.btn.btn-primary#feedback.weaveAgain Give Us Feedback
		.reveal
