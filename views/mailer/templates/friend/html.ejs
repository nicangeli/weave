<body>
	<h1>
		Hello <%= locals.name %>
	</h1>
	<p>
		Here are the items that your friend liked from your collections...
	</p>

	<div class="products">
		<table class="product-table">
			<% for(var i=0; i< locals.products.length; i++) { %>
				<tr class="product-row">
  					<td class="image-cell">
  						<img src="http://weaveuk.com<%=locals.products[i].imageUrl%>" class="product-image">
  					</td>
  					<td class="info-cell">
  						<h2> 
  							<%= locals.products[i].shop %> 
  						</h2>
  						<% if(locals.products[i].brand != locals.products[i].shop) { %>
  							<h4>
  								<%= locals.products[i].brand %>
  							</h4>
  						<% }; %>
  						<h4>
  							<%= locals.products[i].price %>
  						</h4>
  					</td>
  				</tr>
			<% } %>
		</table>
	</div>
</body>